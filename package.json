{
  "name": "vfile-reporter",
  "version": "7.0.4",
  "description": "vfile utility to create a report for a file",
  "license": "MIT",
  "keywords": [
    "vfile",
    "vfile-util",
    "vfile-reporter",
    "util",
    "utility",
    "reporter",
    "virtual",
    "file",
    "formatter",
    "report",
    "format",
    "message",
    "warning",
    "error"
  ],
  "repository": "vfile/vfile-reporter",
  "bugs": "https://github.com/vfile/vfile-reporter/issues",
  "funding": {
    "type": "opencollective",
    "url": "https://opencollective.com/unified"
  },
  "author": "Titus Wormer <tituswormer@gmail.com> (https://wooorm.com)",
  "contributors": [
    "Titus Wormer <tituswormer@gmail.com> (https://wooorm.com)"
  ],
  "sideEffects": false,
  "type": "module",
  "main": "index.js",
  "browser": {
    "./lib/color.js": "./lib/color.browser.js",
    "./lib/platform.js": "./lib/platform.browser.js"
  },
  "types": "index.d.ts",
  "files": [
    "lib/",
    "index.d.ts",
    "index.js"
  ],
  "dependencies": {
    "@types/supports-color": "^8.0.0",
    "string-width": "^5.0.0",
    "supports-color": "^9.0.0",
    "unist-util-stringify-position": "^3.0.0",
    "vfile-sort": "^3.0.0",
    "vfile-statistics": "^2.0.0"
  },
  "devDependencies": {
    "@types/tape": "^4.0.0",
    "c8": "^7.0.0",
    "cross-env": "^7.0.0",
    "figures": "^3.0.0",
    "prettier": "^2.0.0",
    "remark-cli": "^10.0.0",
    "remark-preset-wooorm": "^9.0.0",
    "rimraf": "^3.0.0",
    "strip-ansi": "^7.0.0",
    "tape": "^5.0.0",
    "type-coverage": "^2.0.0",
    "typescript": "^4.0.0",
    "vfile": "^5.0.0",
    "xo": "^0.48.0"
  },
  "scripts": {
    "prepack": "npm run build && npm run format",
    "build": "rimraf \"lib/**/*.d.ts\" \"*.d.ts\" && tsc && type-coverage",
    "format": "remark . -qfo && prettier . -w --loglevel warn && xo --fix",
    "test-api": "cross-env FORCE_COLOR=\"true\" node test.js",
    "test-coverage": "cross-env FORCE_COLOR=\"true\" c8 --check-coverage --branches 100 --functions 100 --lines 100 --statements 100 --reporter lcov node test.js",
    "test": "npm run build && npm run format && npm run test-coverage"
  },
  "prettier": {
    "tabWidth": 2,
    "useTabs": false,
    "singleQuote": true,
    "bracketSpacing": false,
    "semi": false,
    "trailingComma": "none"
  },
  "xo": {
    "prettier": true
  },
  "remarkConfig": {
    "plugins": [
      "preset-wooorm"
    ]
  },
  "typeCoverage": {
    "atLeast": 100,
    "detail": true,
    "strict": true,
    "ignoreCatch": true
  }
}

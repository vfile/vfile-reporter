{
  "compilerOptions": {
    "customConditions": ["development"],
    "checkJs": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "exactOptionalPropertyTypes": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["es2022"],
    "module": "node16",
    "newLine": "lf",
    "strict": true,
    "target": "es2022"
  },
  "exclude": ["coverage/", "node_modules/"],
  "include": ["**/*.js"]
}
